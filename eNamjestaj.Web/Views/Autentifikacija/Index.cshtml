@model eNamjestaj.Web.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    string poruka = (string)ViewData["poruka"];
    Layout = "_LayoutAuth";
    //Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        
        body {
            height:100%;
            background-size: 100% 100%;
            background-image: url('/assets/img/abstract-blur-living-room-interior.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-attachment:fixed;
        }

        


    </style>
  </head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <form asp-action="Login">
                                        <div class="form-group">
                                            <label class="small mb-1">Korisničko ime</label>
                                            <input asp-for="username" class="form-control py-4" placeholder="Unesite korisničko ime" />
                                            <span asp-validation-for="username" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1">Lozinka</label>
                                            <input asp-for="password" class="form-control py-4" type="password" placeholder="Unesite lozinku" />
                                            <span asp-validation-for="password" class="text-danger"></span>
                                        </div>

                                        <div class="form-group d-flex align-items-center justify-content-center mt-4 mb-0">
                                            <input type="submit" class="btn btn-primary" value="Login" />
                                        </div>



                                    </form>
                                </div>
                                @*<div class="card-footer text-center">
                                    <div class="small"><a href="/ModulKupac/Registracija/Index">Nemate račun? Registrujte se!</a></div>
                                </div>*@
                            </div>
                        </div>
                    </div>
                    @if (poruka != null)
                    {
                        <br />
                        <div class="alert alert-danger">
                            @poruka
                        </div>
                    }
                </div>
            </main>
        </div>


        </div>
        
</body>
</html>





