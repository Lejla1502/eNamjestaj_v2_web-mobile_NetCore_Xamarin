@model eNamjestaj.Web.ViewModels.LoginTwoFactorVM
@{
    ViewData["Title"] = "Login - TwoFactor provjera";
    string poruka = (string)ViewData["poruka"];
    Layout = "_LayoutAuth";
}



<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <form asp-action="LoginTwoFactor">

                                        <input asp-for="username" type="hidden" value="@Model.username"  />
                                        <input asp-for="password" type="hidden" value="@Model.password"  />
                                        <input asp-for="ZapamtiLozinku" type="hidden" value="@Model.ZapamtiLozinku" />

                                        <div class="form-group">
                                            <label asp-for="TwoFactorPin" class="small mb-1"></label>
                                            <input asp-for="TwoFactorPin" class="form-control py-4" type="password" placeholder="Unesite lozinku" />
                                            <span asp-validation-for="TwoFactorPin" class="text-danger"></span>
                                        </div>

                                        <div class="form-group d-flex align-items-center justify-content-center mt-4 mb-0">
                                            <input type="submit" class="btn btn-primary" value="Login" />
                                        </div>



                                    </form>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                    @if (poruka != null)
                    {
                        <br />
                        <div class="alert alert-danger">
                            @poruka
                        </div>
                    }
                </div>
            </main>
        </div>

    </div>

</body>








