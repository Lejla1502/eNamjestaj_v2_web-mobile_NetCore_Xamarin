@using Microsoft.AspNetCore.Http
@using eNamjestaj.Data.Helper
@using eNamjestaj.Data.Models
@using eNamjestaj.Data


@{
    MojContext ctx = new MojContext();
    Korisnik k = Context.GetLogiraniKorisnik();
    Zaposlenik menadzer = ctx.Zaposlenik.Where(m => m.KorisnikId == k.Id).First();
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eNamjestaj.Web</title>

    <link href="~/css/styles.css" rel="stylesheet" />



    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/lib/startbootstrap-sb-admin/css/sb-admin.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>



</head>

<body class="sb-nav-fixed ">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand" href="/ModulMenadzer/NaslovnaStrana/Index">eNamještaj</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0"></form>

        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"></i><i class="fa fa-caret-down"></i></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="/Autentifikacija/Logout">Logout</a>

                </div>
            </li>
        </ul>

    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (menadzer != null)
                        {
                            <div class="sb-sidenav-menu-heading">@menadzer.Ime @menadzer.Prezime </div>
                        }


                        <div class="nav-link"></div>
                        <a class="nav-link" href="/ModulMenadzer/Dashboard/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>


                        <a class="nav-link" href="/ModulMenadzer/ProizvodiMenadzer/Index">
                            <div class="sb-nav-link-icon"><i class="fa fa-th-list"></i></div>
                            Evidencija proizvoda
                        </a>


                        <a class="nav-link" href="/ModulMenadzer/AkcijskiKatalog/Index/">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Evidencija kataloga
                        </a>

                        <a class="nav-link" href="/ModulMenadzer/Kategorija/Index/">
                            <div class="sb-nav-link-icon"><i class="fa fa-list-alt" aria-hidden="true"></i></i></div>
                            Evidencija kategorija
                        </a>

                        <a class="nav-link" href="/ModulMenadzer/NarudzbeMenadzer/Index/">
                            <div class="sb-nav-link-icon"><i class="fas fa-bell" aria-hidden="true"></i></div>
                            Evidencija narudzbi
                        </a>

                        <a class="nav-link" href="/ModulMenadzer/Normativ/Index/">
                            <div class="sb-nav-link-icon"><i class="fas fa-tasks"></i></div>
                            Evidencija normativa/sastavnice
                        </a>


                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                            Evidencija nabavki
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="/ModulMenadzer/NabavkaProizvod/Index/">Nabavka proizvoda</a>
                                <a class="nav-link" href="/ModulMenadzer/NabavkaMaterijal/Index/">Nabavka materijala</a>
                            </nav>
                        </div>

                        <a class="nav-link" href="/ModulMenadzer/ProizvodniNalog/Index/">
                            <div class="sb-nav-link-icon"><i class="fa fa-file-signature" aria-hidden="true"></i></div>
                            Evidencija proizvodnog naloga
                        </a>

                    </div>
                </div>
                @if (k != null)
                {
                    <div class="sb-sidenav-footer">

                        <div class="small">Logiran kao:</div>
                        @k.KorisnickoIme

                    </div>
                }
            </nav>
        </div>
        <div id="layoutSidenav_content">

            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer class="py-4 bg-light mt-auto ">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; eNamještaj 2021</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
</body>




@RenderSection("Scripts", required: false)
</html>

